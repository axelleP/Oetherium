{% extends "::layout.html.twig" %}
{% block titlePage %}Texte annexe "{{ annexText.title }}" - Oetherium{% endblock %}

{% block metaDescriptionPage %}
    <meta name="description" content="Compléter votre connaissance du monde de l'Oetherium avec ce texte annexe!">
{% endblock %}

{% block descriptionMenu %}Bonne lecture{% endblock %}

{% block body %}
    <div itemscope itemtype="http://schema.org/CreativeWork">
        <h1 id="title" class="uppercase" itemprop="headline">{{ annexText.title }}</h1>
        
        <div id="contentMiddleFrame" itemprop="text">
            {{ annexText.contents|raw }}
        </div>
        
        <!-- Rappel : les textes sont affichés du plus récent au plus ancien -->
        <!-- si l'id n'est pas le premier de la liste alors on peut faire précédent -->
        {% if idPreviousAnnexText is not empty %}
            <a class="boxLink" itemprop="url" href="{{ path('apa_story_annexText', {'id': idPreviousAnnexText}) }}">Texte précédent</a>&nbsp;-
        {% endif %}
        
        <!-- si l'id n'est pas le dernier de la liste alors on peut faire suivant -->
        {% if idNextAnnexText is not empty %}
            <a class="boxLink" itemprop="url" href="{{ path('apa_story_annexText', {'id': idNextAnnexText}) }}">Texte suivant</a>&nbsp;-
        {% endif %}
    
        <a class="boxLink" itemprop="url" href="{{ path('apa_story_annexTexts') }}">Retour aux textes</a>
    </div>
    <br><br>
{% endblock %}

{% block socialNetwork %}
    <a class="buttonSocialNetworkFirst centerPage twitterButton" target="_blank" title="Twitter" href="http://twitter.com/share?url={{ app.request.uri }}&amp;text=Texte%20annexe%20«{{ annexText.title|replace({(' '):'%20'}) }}»%20-%20Oetherium">
        <i class="fa fa-twitter fa-lg tw">t</i>
    </a>
    
    <a class="buttonSocialNetwork centerPage facebookButton" target="_blank" title="Facebook" href="http://www.facebook.com/sharer.php?u={{ app.request.uri }}&amp;t=Texte%20annexe%20«{{ annexText.title|replace({(' '):'%20'}) }}»%20-%20Oetherium">
        <i class="fa fa-facebook fa-lg fb">f</i>
    </a>
    
    <a class="buttonSocialNetwork centerPage googleButton" target="_blank" title="Google Plus" href="https://plusone.google.com/_/+1/confirm?hl=en&amp;url={{ app.request.uri }}">
        <i class="fa fa-google-plus fa-lg google">g</i>
    </a>
{% endblock %}