ull";s:24:"sonata_field_description";s:60:"Object(Sonata\DoctrineORMAdminBundle\Admin\FieldDescription)";s:11:"sonata_help";s:4:"null";s:18:"translation_domain";s:4:"null";s:4:"trim";s:4:"true";s:17:"validation_groups";s:4:"null";s:7:"virtual";s:4:"null";}s:12:"default_data";a:2:{s:4:"norm";s:1:"2";s:4:"view";s:1:"2";}s:14:"submitted_data";a:2:{s:4:"norm";s:1:"2";s:4:"view";s:1:"2";}s:6:"errors";a:0:{}s:8:"children";a:0:{}}s:8:"contents";a:11:{s:2:"id";s:35:"s59392946d66f2_pagesBook_1_contents";s:4:"name";s:8:"contents";s:4:"type";s:8:"ckeditor";s:10:"type_class";s:43:"Ivory\CKEditorBundle\Form\Type\CKEditorType";s:12:"synchronized";s:4:"true";s:14:"passed_options";a:4:{s:6:"config";s:1241:"[
